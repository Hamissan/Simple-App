<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Postpulse</title>
  <link rel="icon" href="/favicon/favicon.ico" type="image/x-icon">
  <link rel="shortcut icon" href="/favicon/favicon.ico" type="image/x-icon">



<%- include('partials/header', { currentPage: 'community' }) %>

<style>
  body {
    font-family: 'Roboto', sans-serif;
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
  }

  .community-section {
    padding: 40px 10px;
    background-color: #fff;
    margin-top: 30px;
  }

  .community-title {
    font-size: 32px;
    margin-bottom: 20px;
    color: #333;
    text-align: center;
  }

  .discussion-threads {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }

  .discussion-thread {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    cursor: pointer;
  }

  .discussion-thread:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .thread-content {
    padding: 20px;
  }

  .thread-title {
    font-size: 18px;
    margin-bottom: 10px;
    color: #333;
    cursor: pointer;
  }

  .thread-description {
    font-size: 14px;
    color: #555;
    margin-bottom: 10px;
  }

  .thread-metadata {
    font-size: 12px;
    color: #777;
  }

  .create-thread-section {
    text-align: center;
    margin-top: 20px;
  }

  .create-thread-btn {
    font-size: 16px;
    padding: 12px 20px;
    background-color: #3498db;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease-in-out;
  }

  .create-thread-btn:hover {
    background-color: #2980b9;
  }

  .custom-nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 20px;
  }

  .nav-link {
    font-size: 16px;
    margin: 0 10px;
    color: #555;
    text-decoration: none;
    cursor: pointer;
    transition: color 0.3s ease-in-out;
  }

  .nav-link:hover {
    color: #3498db;
  }
</style>
</head>

<body>

  <div class="community-section">
    <div class="container">
      <!-- Community Title -->
      <h2 class="community-title">Engage in Community Discussions</h2>

      <!-- Custom Navigation -->
      <div class="custom-nav">
        <a href="/community" class="nav-link">All</a>
        <a href="/community/digital-art" class="nav-link">Digital Art</a>
        <a href="/community/web-development" class="nav-link">Web Development</a>
      </div>

      <!-- Create Thread Section -->
      <div class="create-thread-section">
        <a href="/create-thread" class="create-thread-btn">Create New Discussion Thread</a>
      </div><br><br>

      <!-- Discussion Threads -->
      <div class="discussion-threads">
        <% for (let i = 1; i <= 8; i++) { %>
          <div class="discussion-thread" onclick="openThread('/discussion-threads/thread<%= i %>')">
            <div class="thread-content">
              <!-- Thread Title -->
              <h3 class="thread-title">Discussion Thread <%= i %></h3>
              <!-- Thread Description -->
              <p class="thread-description">Explore and share your thoughts on various topics. Discuss and connect with the community!</p>
              <!-- Thread Metadata -->
              <p class="thread-metadata">Posted by: John Doe | 2 hours ago</p>
            </div>
          </div>
        <% } %>
      </div>

      <!-- Pagination -->
      <div class="pagination">
        <span class="page-link">&laquo;</span>
        <span class="page-link active-page">1</span>
        <span class="page-link">2</span>
        <span class="page-link">3</span>
        <span class="page-link">&raquo;</span>
      </div>

    </div>
  </div>

  <!-- Bootstrap JS and Popper.js scripts -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <!-- Font Awesome for icons -->
  <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>

  <script>
    function openThread(threadUrl) {
      // Redirect to the selected discussion thread
      window.location.href = threadUrl;
    }
  </script>
</body>

</html>