<script>
  // Add JavaScript for filtering workshops based on category
  document.getElementById('category-filter').addEventListener('change', function () {
    const selectedCategory = this.value;
    const workshops = document.querySelectorAll('.workshop');

    workshops.forEach((workshop) => {
      const workshopCategory = workshop.getAttribute('data-category');

      if (selectedCategory === 'all' || workshopCategory === selectedCategory) {
        workshop.style.display = 'block';
      } else {
        workshop.style.display = 'none';
      }
    });
  });

  // Function to show workshop details (replace with your implementation)
  function showDetails(workshopTitle) {
    alert(`Details for "${workshopTitle}" will be displayed here.`);
    // You can replace the alert with a modal or expand the workshop section to show details
  }
</script><br><br>

