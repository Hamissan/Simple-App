<!-- views/posts.ejs -->

<%- include('partials/header') %>

<div class="container mt-5">
  <h1 class="mb-4">Posts</h1>
  <% if (currentUser && currentUser.username) { %>
    <p>Welcome, <%= currentUser.username %>!</p>
    <a href="/submit" class="btn btn-primary">Write a Post</a>
    <hr>
  <% } %>

  <% if (posts.length > 0) { %>
    <% posts.forEach(function(post) { %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.content %></p>
          <p class="card-text">Author: <%= post.author.username %></p>
          <!-- <p class="card-text">Author: <%= currentUser.username %></p> -->
          <p class="card-text">Date: <%= post.date.toLocaleString() %></p>
          <a href="/edit/<%= post._id %>" class="btn btn-warning">Edit</a>
          <a href="/delete/<%= post._id %>" class="btn btn-danger">Delete</a>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <p>No posts yet.</p>
  <% } %>
</div>

<%- include('partials/footer') %>
