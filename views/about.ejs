<script>
  /* JavaScript for FAQ Accordion */
  function toggleFAQ(index) {
    var faqContent = document.getElementById('faq-content-' + index);
    var arrowIcon = document.getElementById('arrow-icon-' + index);

    if (faqContent.style.display === 'block') {
      faqContent.style.display = 'none';
      arrowIcon.classList.remove('fa-chevron-up');
      arrowIcon.classList.add('fa-chevron-down');
    } else {
      faqContent.style.display = 'block';
      arrowIcon.classList.remove('fa-chevron-down');
      arrowIcon.classList.add('fa-chevron-up');
    }
  }

  /* JavaScript for Testimonials Carousel */
  var testimonialIndex = 0;

  function showTestimonials(index) {
    var carousel = document.getElementById('testimonial-carousel');
    testimonialIndex = index;
    var translateValue = -testimonialIndex * 100 + '%';
    carousel.style.transform = 'translateX(' + translateValue + ')';
  }

  function navigateTestimonials(direction) {
    testimonialIndex += direction;
    if (testimonialIndex < 0) {
      testimonialIndex = 0;
    } else if (testimonialIndex >= document.getElementsByClassName('testimonial').length) {
      testimonialIndex = document.getElementsByClassName('testimonial').length - 1;
    }
    showTestimonials(testimonialIndex);
  }
</script>

